@model IEnumerable<SchoolbookApp.Models.Note>

@{
    ViewData["Title"] = "Index";
}

<h1>Забележки</h1>


<table class="table table-striped table-bordered table-light">
    <thead class="thead-dark">
        <tr>
            <th>
                Забележка
            </th>
            <th>
                Предмет
            </th>
            <th>
                Дата 
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model) {
            <tr>
                <td>
                    @note.Text
                </td>
                @foreach (var subject in ViewBag.SubjectNames)
                {
                    @if (subject.Value == note.Subject.SubjectType.Name) { 
                         <td>
                            @subject.Value
                        </td>
                        break;
                    }
                }
                 <td>
                     @note.DateTime
                </td>
            
            </tr>
         }
    </tbody>
</table>

@model SchoolbookApp.Models.Absence

@{
    ViewData["Title"] = "Редактиране на отсъствие";
}

<h1>Редактиране на отсъствие</h1>
<h4>на @ViewBag.Student</h4>
<h4>за @ViewBag.Absence.DateTime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.Half)
                    <input class="form-check-input" asp-for="Half" />
                </label>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="display: none">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

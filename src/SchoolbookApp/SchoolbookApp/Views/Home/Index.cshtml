@{
    ViewData["Title"] = "Home Page";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/homepage.css" />
</head>
<body>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/homepage4.png" alt="First slide">
                <div class="carousel-caption">
                    <h2> </h2>
                    <h3> </h3>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/homepage5.png" alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <a class="btn btn-primary" href="/Identity/Account/Login" role="button">Влез</a>
    @*Проверка за ролята на Admin*@
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            <a class="btn btn-danger" asp-area="Identity" asp-page="/Account/Register" role="button">Регистрирай</a>
        }
    }

    @*</div>*@
</body>
</html>
        </table>

        <table class="table table-striped table-bordered table-light">
            <thead class="thead-dark">
                <tr>
                    <th colspan="2">Сряда</th>
                </tr>
                <tr>
                    <th>Час</th>
                    <th>Клас</th>
                </tr>
            </thead>
